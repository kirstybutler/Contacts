<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="240dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_eda"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/about_text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This application was created for the module 'Android Application Development' which is part of the MSc degree 'Mobile Application Development' at the Univerisity of Kent, Canterbury. "
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:padding="25dp"/>

    <TextView
        android:id="@+id/about_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It is aimed to read the news articles that are submitted from the school of Engineering and Digital arts, and allow users to view the article details along with images and description. "
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/about_text_one"
        android:padding="25dp"
        />
</RelativeLayout>